<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profile.css" />
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div id="heading">
      <h1><%= profile.name %> </h1>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <% if (profile.burgers.length) { %>
    <table id="proflist">
      <thead id="burgerlist">
        <tr>
          <th>
            <h2>Burger</h2>
          </th>
          <th>
          </th>
          <th>
            <h2>Restaurant</h2>
          </th>
        </tr>
      </thead>
      <br>
      <tbody>
    <% profile.burgers.forEach(burger => { %>
      <tr> 
        <td>
          <h2>
            <a href="/burgers/<%= burger._id %>">
              <%= burger.name %>
          </a>
        </h2>
      </td>
      <td>
        <h2>&NonBreakingSpace;from&NonBreakingSpace;</h2>
      </td>
      <td>
        <h2>
          <%= burger.restaurant %> </td>
        </h2>
    </td>
  </tr>
  <% }) %>
  </tbody>
</table>
    <% } else { %> 
      <h2>No Burgers Yet</h2>
    <% } %> 
<br>
</main>

<%- include('../partials/footer') %>